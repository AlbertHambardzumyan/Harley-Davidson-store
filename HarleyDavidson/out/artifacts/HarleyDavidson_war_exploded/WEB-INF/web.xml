<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>shop1</servlet-name>
        <servlet-class>shop.login.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shop1</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shop2</servlet-name>
        <servlet-class>shop.register.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shop2</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shop3</servlet-name>
        <servlet-class>shop.product.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shop3</servlet-name>
        <url-pattern>/ProductServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shop4</servlet-name>
        <servlet-class>shop.cart.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shop4</servlet-name>
        <url-pattern>/CartServlet</url-pattern>
    </servlet-mapping>
</web-app>